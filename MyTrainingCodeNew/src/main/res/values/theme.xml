<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarThemeBG"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarBG</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:windowActionBarOverlay">true</item>
        
        <!-- Support library compatibility -->
        <!-- <item name="actionBarStyle">@style/MyActionBar</item> -->
    </style>
    
    <style name="CustomActionBarThemeTT"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTT</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
    </style>
    
    <style name="CustomActionBarThemeDetail"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarBG</item>
    </style>
    
    <style name="CustomActionBarThemeOverlayActionBar"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarBG</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBarBG"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/translucence</item>
        
        <!-- Support library compatibility -->
        <!-- <item name="background">@drawable/abc_ic_go</item> -->
    </style>
    
    <style name="MyActionBarTT"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    
    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
    
</resources>
