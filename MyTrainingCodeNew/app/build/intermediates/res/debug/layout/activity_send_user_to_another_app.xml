<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/layout_first_page"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <Button
	        android:id="@+id/btn_tel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tel" />

	    <Button
	        android:id="@+id/btn_view_map"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="View Map" />

	    <Button
	        android:id="@+id/btn_view_webpage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="View Webpage" />

	    <Button
	        android:id="@+id/btn_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email" />

	    <Button
	        android:id="@+id/btn_calendar_event"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Calendar Event" />

	    <Button
	        android:id="@+id/btn_get_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Get result" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/layout_second_page"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:orientation="vertical" >

		<Button
		    android:id="@+id/btn_pick_contact"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Pick contact" />

		<TextView
		    android:id="@+id/txv_result"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textAppearance="?android:attr/textAppearanceLarge" />

	</LinearLayout>

</LinearLayout><!-- From: file:/Users/sunxiaoling/AndroidStudioProjects/android_training/MyTrainingCodeNew/app/src/main/res/layout/activity_send_user_to_another_app.xml -->